@model CadSeries.Models.Diretor

@{
    ViewData["Title"] = "Details";
}

<h1>Informações do Diretor</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="NomeDiretor" class="control-label">Diretor</label>
           
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeDiretor)
        </dd>

        <dt class = "col-sm-2">
            <label asp-for="NomeDiretor" class="control-label">Biografia</label>
           
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Biografia)
        </dd>

        <dt class = "col-sm-2">
            <label asp-for="Ativo" class="control-label">Ativo</label>
            
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>

        <dt class = "col-sm-2">
            <label asp-for="Tv" class="control-label">TV</label>
            
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tv.NomeTv)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id"><i class="fas fa-edit"></i> Editar</a> |
    <a asp-action="Index"><i class="fas fa-backward"></i> Voltar</a>
</div>
